<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewCTHD_TenSP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="4dp"
        android:text="Trà sữa truyền thống"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/imageViewXoaSP"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonCong1SP"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:gravity="center"
        android:paddingTop="4dp"
        android:text="+"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewCTHD_Gia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="15.000đ"
        android:textColor="#B50B0B"
        android:textSize="15dp"
        android:layout_marginLeft="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageViewXoaSP"
        app:layout_constraintTop_toBottomOf="@+id/textViewCTHD_TenSP"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/editTextCTHD_SoLuong"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_marginTop="13dp"
        android:text="100"
        android:textSize="20dp"
        android:gravity="center"
        app:layout_constraintEnd_toStartOf="@+id/buttonCong1SP"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:paddingTop="4dp"
        android:textSize="30dp"
        android:id="@+id/buttonTru1SP"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:text="-"
        app:layout_constraintEnd_toStartOf="@+id/editTextCTHD_SoLuong"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageViewXoaSP"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/xoasp" />

</androidx.constraintlayout.widget.ConstraintLayout>